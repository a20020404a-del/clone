# API Keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# App Settings
DEBUG=true
APP_NAME=AI Avatar System
APP_VERSION=0.1.0

# Storage Paths (optional, defaults to ./uploads, ./outputs, ./models)
# UPLOAD_DIR=./uploads
# OUTPUT_DIR=./outputs
# MODELS_DIR=./models

# Database
DATABASE_URL=sqlite+aiosqlite:///./avatar.db

# Redis (for background tasks - optional)
# REDIS_URL=redis://localhost:6379/0

# Voice Settings
VOICE_SAMPLE_DURATION=20
MAX_VOICE_FILE_SIZE=10485760

# LLM Settings
LLM_MODEL=claude-3-sonnet-20240229
LLM_MAX_TOKENS=1024
